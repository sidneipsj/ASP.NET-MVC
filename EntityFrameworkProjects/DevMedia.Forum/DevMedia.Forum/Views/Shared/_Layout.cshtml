@using DevMedia.Forum.Repositorio
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />
    @* Nesta linha foi definida a tag meta para o viewport, desta forma o Bootstrap pode identificar a resolução e o tipo de dispositivo que está acessando a página e assim tornar a mesma responsiva. *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Fórum Tech</title>
    @* · Linhas 8 e 9: Aqui é utilizado o recurso de renderização de scripts e estilos no browser. Estes arquivos encontram-se nas pastas Content e Scripts. *@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                @Html.ActionLink("Fórum Tech", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </di  v>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Cadastre-se", "Index", "Usuarios")</li>

                    <li>@Html.ActionLink("Tópicos Fórum", "Index", "Topico")</li>

                    <li>@Html.ActionLink("Usuários", "Index", "Usuarios")</li>

                </ul>
                <form method="post" action="/Login/FinalizarSessao" id="frmSessao" class="navbar-right">
                    @{
                        var msgVisitante = "Olá visitante!";
                        var usuarioLogado = AutenticarUsuario.retornarUsuarioDaSessao();
                        if (usuarioLogado == null)
                        {
                            <label style="color:White"> @msgVisitante </label>
                        }
                        else
                        {
                            <label style="color:White"> @usuarioLogado.nome </label>
                        }
                    }
                    <input type="submit" value="Entrar/Sair" class="btn btn-default" />

                </form>

            </div>

        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© @DateTime.Now.Year - Fórum Tech</p>

        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>