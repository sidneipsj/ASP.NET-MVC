@model Mvc_DropDownList_Multiplo.Models.SEGMENTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>Sidnei .Net - DropDownList com seleção múltipla</h2>
        <hr />
        <div>
            DropDownList - multiple
            <br />
            @Html.DropDownList("SegmentoId", (MultiSelectList)ViewBag.Segmentos, new { multiple = "multiple" })
            <br />
            ListBox
            <br />
            @Html.ListBox("SegmentoId", (MultiSelectList)ViewBag.Segmentos)
        </div>
    </div>
</body>
</html>
